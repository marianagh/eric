<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.05"
        >

        <ImageView
            android:layout_width="231dp"
            android:layout_height="414dp"
            android:id="@+id/figura_menu_opcion_off"
            android:src="@drawable/menu_opcion_off"
            android:layout_weight="0.05"
            android:layout_gravity="left|bottom">

        </ImageView>

        <ImageView
            android:layout_width="231dp"
            android:layout_height="414dp"
            android:id="@+id/figura_menu_opcion_01"
            android:src="@drawable/menu_opcion_01"
            android:layout_weight="0.05"
            android:layout_gravity="left|bottom">

        </ImageView>

        <ImageView
            android:layout_width="231dp"
            android:layout_height="414dp"
            android:id="@+id/figura_menu_opcion_02"
            android:src="@drawable/menu_opcion_02"
            android:layout_weight="0.05"
            android:layout_gravity="left|bottom">

        </ImageView>

        <ImageView
            android:layout_width="231dp"
            android:layout_height="414dp"
            android:id="@+id/figura_menu_opcion_03"
            android:src="@drawable/menu_opcion_03"
            android:layout_gravity="left|bottom">

        </ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seam_logo"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/seam_logo"
            android:cropToPadding="false"
            />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/opcion_01"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ovalo"
            android:layout_marginBottom="97dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/text_reba" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/opcion_02"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ovalo"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/text_rula" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/opcion_03"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/ovalo"
            android:layout_marginRight="100dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/consultar_icon" />

    </FrameLayout>

</RelativeLayout>
